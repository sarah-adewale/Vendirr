                <div class="">
                    <label for="lastName" class=""></label>
                    <input type="text" name="lastName" id="lastName" class="name-field form-control profile-input rounded-lg" placeholder="City" required="">
                </div>

                <section class="flex flex-row">
                    <div class="">
                        <label for="lastName" class=""></label>
                        <input type="text" name="lastName" id="lastName" class="name-field form-control profile-input rounded-lg" placeholder="Business Category" required="">
